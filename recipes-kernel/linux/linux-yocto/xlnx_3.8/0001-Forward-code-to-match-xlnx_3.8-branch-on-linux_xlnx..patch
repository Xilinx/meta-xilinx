-			if (obj)
-				yaffs_update_oh(obj, NULL, 1, 0, 0, NULL);
-
-			kfree(fixer);
-		}
-	}
-
-	yaffs_release_temp_buffer(dev, chunk_data);
-
-	if (alloc_failed)
-		return YAFFS_FAIL;
-
-	yaffs_trace(YAFFS_TRACE_SCAN, "yaffs1_scan ends");
-
-	return YAFFS_OK;
