-	yaffs_deinit_raw_objs(dev);
-	kfree(dev->allocator);
-	dev->allocator = NULL;
-}
-
-void yaffs_init_raw_tnodes_and_objs(struct yaffs_dev *dev)
-{
-	struct yaffs_allocator *allocator;
-
-	if (dev->allocator) {
