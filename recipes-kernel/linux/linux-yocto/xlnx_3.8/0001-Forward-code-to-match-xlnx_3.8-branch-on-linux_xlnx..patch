-	struct yaffs_allocator *allocator = dev->allocator;
-
-	if (!allocator) {
-		BUG();
-		return;
-	}
-
-	/* Link into the free list. */
-	list_add(&obj->siblings, &allocator->free_objs);
-	allocator->n_free_objects++;
-}
-
